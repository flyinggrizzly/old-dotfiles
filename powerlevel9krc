# Prompt
POWERLEVEL9K_DIR_HOME_BACKGROUND="45"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND="45"
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND="45"

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status root_indicator rbenv time)

POWERLEVEL9K_TIME_FORMAT="%D{%H:%M}"
POWERLEVEL9K_RBENV_FOREGROUND='white'
POWERLEVEL9K_RBENV_BACKGROUND='160'

POWERLEVEL9K_STATUS_ERROR_FOREGROUND='white'
POWERLEVEL9K_STATUS_ERROR_BACKGROUND='52'
POWERLEVEL9K_STATUS_OK_BACKGROUND='17'
POWERLEVEL9K_STATUS_OK_FOREGROUND='46'

POWERLEVEL9K_PROMPT_ON_NEWLINE=true

POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="╭─%F{45}"
POWERLEVEL9K_MULTILINE_SECOND_PROMPT_PREFIX="╰─➤ %F{green}%f"

# Limit to the last two folders
POWERLEVEL9K_SHORTEN_DIR_LENGTH=2

# Git
# Disable dir/git icons
POWERLEVEL9K_HOME_ICON=''
POWERLEVEL9K_HOME_SUB_ICON=''
POWERLEVEL9K_FOLDER_ICON=''

DISABLE_AUTO_TITLE="true"

POWERLEVEL9K_VCS_GIT_ICON=''
POWERLEVEL9K_VCS_STAGED_ICON='\u00b1'
POWERLEVEL9K_VCS_UNTRACKED_ICON='\u25CF'
POWERLEVEL9K_VCS_UNSTAGED_ICON='\u00b1'
POWERLEVEL9K_VCS_INCOMING_CHANGES_ICON='\u2193'
POWERLEVEL9K_VCS_OUTGOING_CHANGES_ICON='\u2191'
POWERLEVEL9K_VCS_CLEAN_BACKGROUND='119'
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND='190'
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND='190'
POWERLEVEL9K_VCS_FOREGROUND='black'

# Alias for showing all colors
alias powerlevelcolors='for code ({000..255}) print -P -- "$code: %F{$code}This is how your text would look like%f"'
